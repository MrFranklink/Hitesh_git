<!DOCTYPE html>
<html>

<head>
    <style>
        body {
            background-color: #282828;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        h1 {
            color: #ffffff;
            text-align: center;
        }

        form {
            text-align: center;
        }

        .custom-file-upload {
            border: 1px solid #ffffff;
            display: inline-block;
            padding: 6px 12px;
            cursor: pointer;
            text-align: center;
            color: #ffffff;
            background-color: #383838;
            border-radius: 4px;
            margin-top: 10px;
        }

        input[type="file"] {
            display: none;
        }

        button {
            margin-top: 10px;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
        }

        #uploadButton {
            background-color: #0077cc;
            color: #ffffff;
            border: none;
        }

        #removeFileButton {
            background-color: #cc0000;
            color: #ffffff;
            border: none;
        }

        #particles-js {
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: -1;
        }
    </style>
</head>

<body>
    <div id="particles-js"></div>
    <div>
        <h1>Upload Excel File</h1>
        <form action="/upload" method="post" enctype="multipart/form-data">
            <label for="excelFile" id="chooseFileButton" class="custom-file-upload">Choose File</label>
            <input type="file" id="excelFile" name="excelFile" onchange="updateFileName()" />
            <span id="fileName"></span>
            <button type="button" id="removeFileButton" onclick="removeFile()">Remove File</button>
            <button type="submit" id="uploadButton">Upload</button>
        </form>
        
    </div>
    

    <script>
        function updateFileName() {
            const fileName = document.getElementById("excelFile").files[0].name;
            document.getElementById("fileName").innerText = fileName;
            document.getElementById("chooseFileButton").style.display = "none";
        }

        function removeFile() {
            document.getElementById("excelFile").value = "";
            document.getElementById("fileName").innerText = "";
            document.getElementById("chooseFileButton").style.display = "inline-block";
        }
        particlesJS("particles-js", {
            particles: {
                number: {
                    value: 80,
                    density: {
                        enable: true,
                        value_area: 800,
                    },
                },
                color: {
                    value: "#ffffff",
                },
                shape: {
                    type: "circle",
                    stroke: {
                        width: 0,
                        color: "#000000",
                    },
                    polygon: {
                        nb_sides: 5,
                    },
                    image: {
                        src: "img/github.svg",
                        width: 100,
                        height: 100,
                    },
                },
                opacity: {
                    value: 0.5,
                    random: false,
                    anim: {
                        enable: false,
                        speed: 1,
                        opacity_min: 0.1,
                        sync: false,
                    },
                },
                size: {
                    value: 3,
                    random: true,
                    anim: {
                        enable: false,
                        speed: 40,
                        size_min: 0.1,
                        sync: false,
                    },
                },
                line_linked: {
                    enable: true,
                    distance: 150,
                    color: "#ffffff",
                    opacity: 0.4,
                    width: 1,
                },
                move: {
                    enable: true,
                    speed: 6,
                    direction: "none",
                    random: false,
                    straight: false,
                    out_mode: "out",
                    bounce: false,
                    attract: {
                        enable: false,
                        rotateX: 600,
                        rotateY: 1200,
                    },
                },
            },
            interactivity: {
                detect_on: "canvas",
                events: {
                    onhover: {
                        enable: true,
                        mode: "grab",
                    },
                    onclick: {
                        enable: true,
                        mode: "push",
                    },
                    resize: true,
                },
                modes: {
                    grab: {
                        distance: 140,
                        line_linked: {
                            opacity: 1,
                        },
                    },
                    bubble: {
                        distance: 400,
                        size: 40,
                        duration: 2,
                        opacity: 8,
                        speed: 3,
                    },
                    repulse: {
                        distance: 200,
                        duration: 0.4,
                    },
                    push: {
                        particles_nb: 4,
                    },
                    remove: {
                        particles_nb: 2,
                    },
                },
            },
            retina_detect: true,
        });

    </script>
</body>

</html>
